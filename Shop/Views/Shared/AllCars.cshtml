@model Shop.Data.Models.Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.img" />
    <h3>Model: @Model.name</h3>
    <p>@Model.shortDesc</p>
    <p>Цена: @Model.price.ToString("c")</p>
    <p> <a class="btn btn-warning" asp-controller="ShopCar" asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a></p>
   
</div>